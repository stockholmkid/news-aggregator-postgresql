<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if @error %>
      <% @error.each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>

    <form action="/articles/new" method="post">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= @title %>" required="please fill">

      <label for="url">URL</label>
      <input type="url" id="url" name="url" value="<%= @url %>" required>

      <label for="description">Description</label>
      <input type="text" id="description" name="description" value="<%= @description %>" required>

      <input type="submit" value="Submit">
    </form>

  </body>
</html>
